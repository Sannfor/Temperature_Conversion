<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aplikasi Konversi Suhu"
            android:textColor="#3F51B5"
            android:textSize="28sp"
            android:textStyle="bold"
            android:layout_marginBottom="30dp"/>

        <EditText
            android:id="@+id/etInputSuhu"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@android:drawable/edit_text"
            android:hint="Masukkan Nilai Suhu"
            android:inputType="numberDecimal|numberSigned"
            android:textSize="20sp"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pilih Satuan Awal:"
            android:layout_marginBottom="5dp"/>

        <Spinner
            android:id="@+id/spinSatuan"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="20dp"
            android:background="#E8EAF6"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <Button
                android:id="@+id/btnHitung"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="KONVERSI"
                android:layout_marginEnd="5dp"
                android:backgroundTint="#3F51B5"/>

            <Button
                android:id="@+id/btnReset"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="RESET"
                android:layout_marginStart="5dp"
                android:backgroundTint="#FF5252"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hasil Konversi:"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"/>

        <TextView android:id="@+id/tvCelsius" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Celsius: -" android:textSize="18sp" android:padding="8dp"/>
        <TextView android:id="@+id/tvFahrenheit" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Fahrenheit: -" android:textSize="18sp" android:padding="8dp"/>
        <TextView android:id="@+id/tvKelvin" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Kelvin: -" android:textSize="18sp" android:padding="8dp"/>
        <TextView android:id="@+id/tvReamur" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Reamur: -" android:textSize="18sp" android:padding="8dp"/>

    </LinearLayout>
</ScrollView>